<h1>This is an index page of my blog</h1>
<h2><%= link_to"Create new blog", new_post_path%></h2>
<% @posts.each do |post|%>
	
	<div class="panel">
		<h2><%= link_to post.title, post_path(post) %></h2>
		<p><%= link_to "edit", edit_post_path(post)%> | 
		   <%= link_to "delete", post_path(post), method: :delete , data: {confirm: "Are you sure you want to delete this blog?" }%>
		</p>  

	</div>

<% end %>